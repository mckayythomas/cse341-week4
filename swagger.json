{
  "swagger": "2.0",
  "info": {
    "title": "API Documentation",
    "description": "API endpoints for VGH",
    "version": "1.0.0"
  },
  "basePath": "/",
  "schemes": ["http", "https"],
  "paths": {
    "/": {
      "get": {
        "description": "Get the welcome message",
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/oauth/github": {
      "get": {
        "description": "Initiate GitHub OAuth2 authentication",
        "responses": {
          "302": {
            "description": "Redirect to GitHub authorization page"
          }
        },
        "security": [
          {
            "OAuth2": ["read", "write"]
          }
        ]
      }
    },
    "/oauth/github-authorized": {
      "get": {
        "description": "Callback URL for GitHub OAuth2 authentication",
        "responses": {
          "302": {
            "description": "Redirect to home page after successful authentication"
          }
        },
        "security": [
          {
            "OAuth2": ["read", "write"]
          }
        ]
      }
    },
    "/students": {
      "get": {
        "description": "Get all students",
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Student"
              }
            }
          }
        }
      },
      "post": {
        "description": "Create a new student",
        "parameters": [
          {
            "name": "student",
            "in": "body",
            "description": "Student object",
            "schema": {
              "$ref": "#/definitions/StudentInput"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Student created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/students/{id}": {
      "get": {
        "description": "Get a student by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Student ID",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Student"
            }
          }
        }
      },
      "delete": {
        "description": "Delete a student",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Student ID",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Student deleted successfully"
          }
        }
      },
      "put": {
        "description": "Update a student",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Student ID",
            "required": true,
            "type": "string"
          },
          {
            "name": "student",
            "in": "body",
            "description": "Updated student object",
            "schema": {
              "$ref": "#/definitions/StudentInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Student updated successfully"
          }
        }
      }
    },
    "/professors": {
      "get": {
        "description": "Get all professors",
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Professor"
              }
            }
          }
        }
      },
      "post": {
        "description": "Create a new professor",
        "parameters": [
          {
            "name": "professor",
            "in": "body",
            "description": "Professor object",
            "schema": {
              "$ref": "#/definitions/ProfessorInput"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Professor created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/professors/{id}": {
      "get": {
        "description": "Get a professor by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Professor ID",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Professor"
            }
          }
        }
      },
      "delete": {
        "description": "Delete a professor",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Professor ID",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Professor deleted successfully"
          }
        }
      },
      "put": {
        "description": "Update a professor",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Professor ID",
            "required": true,
            "type": "string"
          },
          {
            "name": "professor",
            "in": "body",
            "description": "Updated professor object",
            "schema": {
              "$ref": "#/definitions/ProfessorInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Professor updated successfully"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "OAuth2": {
      "type": "oauth2",
      "description": "OAuth2 authorization",
      "flow": "accessCode",
      "authorizationUrl": "https://example.com/oauth/authorize",
      "tokenUrl": "https://example.com/oauth/token",
      "scopes": {
        "read": "Grants read access",
        "write": "Grants write access"
      }
    }
  },
  "definitions": {
    "Student": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "age": {
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "Professor": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        }
      }
    },
    "StudentInput": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "age": {
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "ProfessorInput": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        }
      }
    }
  }
}
